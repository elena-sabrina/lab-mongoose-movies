<h2>Edit {{title}}</h2>

<form method="POST" action="/movies/{{movies._id}}">
    <label for="input-title">Title</label>
    <input type="text" id="input-title" name="title" placeholder="{{ movies.title }}" required/>

    <label for="input-genre">Genre</label>
    <input type="text" id="input-genre" name="genre" placeholder="{{ movies.genre }}" required/>
    
    <label for="input-plot">Plot</label>
    <input type="text" id="input-plot" name="plot" placeholder="{{ movies.plot }}" required/>
   
    <button>Submit</button>
</form>


